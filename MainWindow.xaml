<Window x:Class="MaxTemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaxTemp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*" />
                <RowDefinition Height="6*"/>
                <RowDefinition Height="0*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Name="lblAufforderung" Margin="0,-34,0,22">Bitte klicken, um Temperaturen auszuwerten.</Label>
            <Button Name="btnAuswerten" Click="BtnAuswerten_Click" Margin="0,-8,0,2">Auswerten</Button>

        </Grid>
    </Viewbox>
</Window>
